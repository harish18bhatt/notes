<div class="form-group row">
  <div class="col-md-10 mb-3">
    <label for="note_title">Title</label>
    <%= f.text_field :title,
            class: "form-control #{note.invalid_cls(:title)}",
            id: "note_title",
            placeholder: "Title...",
            required: true %>

    <div class="<%=note.invalid_feedback_cls(:title) %>"><%= note.error_msg(:title) %></div>
  </div>
</div>

<div class="form-group row">
  <div class="col-md-10 mb-3">
    <label for="note_tags">Tags (separated by commas)</label>
    <%= f.text_field :tag_list,
          class: "form-control #{note.invalid_cls(:tags)}",
          id: "note_tags",
          placeholder: "Tags...",
          required: true %>

    <div class="<%=note.invalid_feedback_cls(:tags) %>"><%= note.error_msg(:tags) %></div>
  </div>
</div>

<div class="form-group row">
  <div class="col-md-10 mb-3">
    <label for="note_body">Note</label>
    <div class="input-group">
      <%= f.text_area :body,
            class: "form-control #{note.invalid_cls(:body)}",
              id: "note_body",
              placeholder: "Write a note...",
              required: true %>

      <div class="<%=note.invalid_feedback_cls(:body) %>"><%= note.error_msg(:body) %></div>
    </div>
  </div>
</div>
